#! /usr/bin/bash

export FZF_DEFAULT_OPTS='
--height=100%
--layout=reverse
--prompt="TL;DR: "
--preview="echo {1} | xargs -I{S} tldr {S} 2>/dev/null"'


help () {
  #
  # the help function.
  #
  echo "gwtldr:"
  echo "     This script allows the user to easily search tldr pages with fzf."
  echo "     Do not forget to puth it in your PATH."
  echo ""
  echo "     adapted from https://hiphish.github.io/blog/2020/05/31/macho-man-command-on-steroids"
  echo ""
  echo "Usage:"
  echo "     gwltdr [-h]"
  echo ""
  echo "Switches:"
  echo "     -h         show this help."
  exit 0
}


main () {
  #
  # TODO.
  #
  while getopts "h" opt; do
      case "$opt" in
          h ) help;;
          \?) echo "Invalid option: -$OPTARG" >&2; exit 1;;
          : ) echo "Option -$OPTARG requires an argument" >&2; exit 1;;
      esac
  done

  help=$(
    tldr -l | \
    tr , '\n' | \
    sed "s/'//g; s/'//; s/\[//; s/\]//; s/ //g" | \
    sort | \
    fzf
  )
  [ -z "$help" ] && exit 0
  tldr "$help"
}


main "$@"
